<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="now" value="current_timestamp"
              dbms="postgresql"/>

    <property name="floatType" value="float4"
              dbms="postgresql"/>

    <!-- Added the entity wallet. -->
    <changeSet id="20190302182540" author="acrosafe">
        <createTable tableName="wallet_record">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="owner_seed" type="varchar(4096)">
                <constraints nullable="false"/>
            </column>
            <column name="married_seed" type="varchar(4096)">
                <constraints nullable="false"/>
            </column>
            <column name="signer_seed" type="varchar(4096)">
                <constraints nullable="false"/>
            </column>
            <column name="backup_signer_seed" type="varchar(4096)">
                <constraints nullable="false"/>
            </column>
            <column name="signer_watching_key" type="varchar(4096)">
                <constraints nullable="false"/>
            </column>
            <column name="backup_signer_watching_key" type="varchar(4096)">
                <constraints nullable="false"/>
            </column>
            <column name="owner_spec" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="owner_salt" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="signer_spec" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="signer_salt" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(2048)">
                <constraints nullable="true"/>
            </column>
            <column name="timestamp" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp"
                    defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
